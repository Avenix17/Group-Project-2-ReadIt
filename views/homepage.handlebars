<div class="row">
<!-- top search bar -->
<div class="topnav">
  <h1>Hello, {{username}}!</h1>
  <input type="text" placeholder="Search.."/>
</div>
<!-- side nav bar -->
<div class="left-sidebar">
  <a class="active" href="/">Home</a>
  <a href="/profile">Profile</a>
  <a href="/settings">Settings</a>
</div>

<!-- page content -->
<div class="content">
  {{!-- .. {{posted content of who you follow}} --}}
  <input type="text" placeholder="Write your post!"/>
 this is where the feed appears

  <ul>
    {{#each renderPosts as |post|}}
      <li>
      {{post.username}}: {{post.title}} - {{post.entry}}
      </li>
      <ul>
      {{#each post.children as |child|}}
        <li>
          {{child.username}}: {{child.title}} - {{child.entry}}
        </li>
      {{/each}}
      </ul>
    {{/each}}
  </ul>
</div>

<div class="right-sidebar">
    <div class="followers">
        {{!-- {{people you follow}} --}}
        this is where followers will appear

      <ul class="following-list">
        <!-- posts array -->
        {{#each following}}
          <li>
          {{!-- {{> post-info post }} --}}
          {{dataValues.followed_username}}
        </li>
      {{/each}}
  </ul>
    </div>
</div>

</div>
<script src="./js/homepage.js"></script>